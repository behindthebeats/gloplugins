<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"
	creationComplete="init()"
	horizontalScrollPolicy="off" verticalScrollPolicy="off"
	backgroundColor="0xDDDDDD">
	<mx:Script>
		<![CDATA[
		
			public static const NAME:String = "InputEditingScreen";
			
			[Bindable]
			private var _txt:String;
			
			public function get inputID():String
			{
				return _txt;
			}
			
			public function set inputID(val:String):void
			{
				_txt = val;
			}
			
			protected function init():void
			{
				name = NAME;
			}
			
			protected function onChange(evt:Event):void
			{
				_txt = input.text;
				dispatchEvent(evt);
			}
		]]>
	</mx:Script>
	<mx:VBox horizontalScrollPolicy="off" verticalScrollPolicy="off" horizontalAlign="center" verticalAlign="middle">
		<mx:Label text="Enter unique ID for this component." horizontalCenter="0" fontSize="12"/>
		<mx:TextInput id="input" text="{_txt}" change="onChange(event)" horizontalCenter="0"/>
	</mx:VBox>
	
</mx:Canvas>
