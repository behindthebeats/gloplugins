<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"
	creationComplete="init()"
	horizontalScrollPolicy="off" verticalScrollPolicy="off">
	<mx:Script>
		<![CDATA[
			import com.hotdraw.java.awt.geom._Point;
			import mx.collections.ArrayCollection;
		
			public static const NAME:String = "OutputEditingScreen";
			
			//[Bindable]
			//private var _txt:String;
			[Bindable]
			private var _input1:String;
			[Bindable]
			private var _input2:String;
			[Bindable]
			private var _input3:String;	
			[Bindable]
			private var _input4:String;
			[Bindable]
			private var _input5:String;
			[Bindable]
			private var _input6:String;
			
			private var _IDs:Array = [];
			
			
			/* public function getInputID(index:uint):String
			{
				return _IDs[index];
			} */
			
			public function setInputID(index:uint, val:String):void
			{
				
				switch(index)
				{
					case 0:
						_input1 = val;
						break;
					case 1:
						_input2 = val;
						break;
					case 2:
						_input3 = val;
						break;
					case 3:
						_input4 = val;
						break;
					case 4:
						_input5 = val;
						break;
					case 5:
						_input6 = val;
						break;
				}
			}
			
			protected function init():void
			{
				name = NAME;
			}
			
			public function get inputFields():Array
			{
				_IDs = [];
				for(var i:uint = 0; i<this.numChildren; i++)
				{
					if(this.getChildAt(i) is TextInput)
					{
						_IDs.push((this.getChildAt(i) as TextInput).text);
					}
				}
				return _IDs.concat();
			}
			
			protected function onChange(evt:Event):void
			{
				dispatchEvent(evt);
			}
		]]>
	</mx:Script>
	<mx:Label id="lbl" text="Enter the ID of the related input component."/>
	<mx:TextInput id="input1" text="{_input1}" change="onChange(event)"/>
	<mx:TextInput id="input2" text="{_input2}" change="onChange(event)"/>
	<mx:TextInput id="input3" text="{_input3}" change="onChange(event)"/>
	<mx:TextInput id="input4" text="{_input4}" change="onChange(event)"/>
	<mx:TextInput id="input5" text="{_input5}" change="onChange(event)"/>
	<mx:TextInput id="input6" text="{_input6}" change="onChange(event)"/>
</mx:VBox>
