<?xml version="1.0" encoding="utf-8"?>
<BaseComponent  xmlns="org.glomaker.shared.component.*" xmlns:mx="http://www.adobe.com/2006/mxml">

<mx:Script>
	<![CDATA[
		import org.glomaker.shared.properties.NumericStepperField;
		import mx.controls.NumericStepper;
		import org.glomaker.shared.properties.ColourField;
		import org.glomaker.shared.properties.IntegerField;

		[Bindable]
		protected var _cornerRadius:IntegerField = new NumericStepperField("cornerRadius", "Corner Radius", 0, 0, 25);
		
		[Bindable]
		protected var _bgColour:ColourField = new ColourField("bgcolour", "Colour", 0xeeeeee);

		override protected function defineProperties():void
		{
			super.defineProperties();
			
			addEditableProperty(_cornerRadius);
			addEditableProperty(_bgColour);			
		}

	]]>
</mx:Script>

	<mx:Canvas id="shape" width="100%" height="100%" cornerRadius="{_cornerRadius.value}" borderStyle="solid" borderThickness="0" backgroundColor="{_bgColour.value}"/>
</BaseComponent>
