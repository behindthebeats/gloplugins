<?xml version="1.0" encoding="utf-8"?>
<BaseComponent
	xmlns="org.glomaker.shared.component.*"
	xmlns:mx="http://www.adobe.com/2006/mxml"
xmlns:controls="com.fxcomponents.controls.*">
	
	<mx:Script>
		<![CDATA[
			import org.glomaker.shared.properties.PropertyField;
			import org.glomaker.shared.properties.FileFilterData;
			import org.glomaker.shared.properties.FilePathField;
			import org.glomaker.shared.component.BaseComponent;
			
			
			[Bindable]
			protected var videoSource:FilePathField = new FilePathField("source", "Video File:", "", new FileFilterData("Flash Videos (*.flv, *.f4v)", "*.flv;*.f4v"));
			

			/**
			 * Define components custom properties.
			 */
			override protected function defineProperties():void
			{
				super.defineProperties();
				addEditableProperty(videoSource);
			}
			
			
			override public function propertyValuesInitialised():void
			{
				vidPlayer.source = videoSource.value;
			}
		
		
			/**
			 * Update when user has selected a different file in the properties panel.
			**/
			override public function editablePropertyUpdated(prop:PropertyField):void
			{
				if(prop == videoSource)
					vidPlayer.source = videoSource.value;
			}	
			

		]]>
	</mx:Script>
	
	<controls:FXVideo id="vidPlayer" width="100%" height="100%" autoPlay="false" bufferTime="10" />
	 
</BaseComponent>